<h1>Listing Orders</h1>
<table>
    <tr>
      <th>Delivery Address</th>
      <th>Delivery Type</th>
      <th>Payment Type</th>
      <th>Created On</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>

    <% @orders.each do |order| %>
      <tr>
        <td><%= order.delivery_address %>  </td>
        <td><%= order.delivery_type %>  </td>
        <td><%= order.payment_type %>  </td>
        <td><%= order.created_at %>  </td>
        <td><%= number_to_currency order.total_price, unit: 'PKR', format: '%n %u' %>  </td>
        <td><%= link_to 'Products', order_path(order.cart) %></td> 
      </tr>
    <% end %>
</table>
<%= link_to '<Back', products_path %> 